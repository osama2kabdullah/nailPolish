{{ '2button.css' | asset_url | stylesheet_tag }}
<div class="custom-section gradient color-{{ section.settings.color_scheme }}">
  {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
  {% endif %}
  
  {% if section.settings.subtitle != blank %}
    <p>{{ section.settings.subtitle }}</p>
  {% endif %}

  <div class="block-container">
    {% if section.settings.logo1 != blank or section.settings.link1 != blank or section.settings.name1 != blank %}
      <div class="block">
        {% if section.settings.logo1 != blank %}
          <img src="{{ section.settings.logo1 | img_url: 'medium' }}" alt="Logo 1">
        {% endif %}
  
        {% if section.settings.link1 != blank %}
          <a href="{{ section.settings.link1 }}" class="button button--primary">{{ section.settings.button1_text }}</a>
        {% endif %}
  
        {% if section.settings.name1 != blank %}
          <p>{{ section.settings.name1 }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.logo2 != blank or section.settings.button2_text != blank %}
    <div class="block">
      {% if section.settings.logo2 != blank %}
        <img src="{{ section.settings.logo2 | img_url: 'medium' }}" alt="Logo 2">
      {% endif %}

      {% if section.settings.link2 != blank %}
        <a href="{{ section.settings.link2 }}" class="button button--primary">{{ section.settings.button2_text }}</a>
      {% endif %}

      {% if section.settings.name2 != blank %}
        <p>{{ section.settings.name2 }}</p>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "image_picker",
      "id": "logo1",
      "label": "Logo 1"
    },
    {
      "type": "url",
      "id": "link1",
      "label": "Link 1"
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 Text"
    },
    {
      "type": "text",
      "id": "name1",
      "label": "Name 1"
    },
    {
      "type": "image_picker",
      "id": "logo2",
      "label": "Logo 2"
    },
    {
      "type": "url",
      "id": "link2",
      "label": "Link 2"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 Text"
    },
    {
      "type": "text",
      "id": "name2",
      "label": "Name 2"
    }
  ],
  "presets": [
    {
      "name": "Two Button",
      "category": "Two Button",
      "settings": {
        "title": "Default Title",
        "subtitle": "Default Subtitle",
        "logo1": "",
        "link1": "",
        "button1_text": "Button 1",
        "name1": "Name 1",
        "logo2": "",
        "link2": "",
        "button2_text": "Button 2",
        "name2": "Name 2"
      }
    }
  ]
}
{% endschema %}
