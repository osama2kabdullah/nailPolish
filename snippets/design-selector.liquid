{% style %}
  /* selector inputs */
  .select-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2rem;
  }
  .design-name {
    text-align: center;
  }
  .select-input {
    max-width: 100%;
    height: 205px;
    background: #ddd;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px dashed black;
    cursor: pointer;
  }
  .select-icon {
    font-size: 30px;
    background: white;
    width: 30px;
    height: 30px;
    text-align: center;
    line-height: 30px;
    border-radius: 30px;
  }
  .selected-image-wrapper {
    position: relative;
    width: 100%;
  }
  .cross-icond {
    position: absolute;
    right: 0;
    cursor: pointer;
    background: #00000085;
    color: white;
    width: 25px;
    text-align: center;
  }
  @media only screen and (max-width: 425px){
    .select-input {
      height: 150px;
    }
    .select-wrapper {
      gap: 1rem;
    }
  }
{% endstyle %}
{%liquid
  assign requredNnumber = product.metafields.custom.requred_to_add.value
%}

<h2>WÃ¤hle deine Designs:</h2>


<section class="select-wrapper">
  {% for i in (1..requredNnumber) %}
    <a
      style="text-decoration: none;"
      href="javascript:void(0)"
      data-drawer-trigger
      aria-controls="drawer-name"
      aria-expanded="false"
      form-id="{{ product_form_id }}"
      index-number="{{ forloop.index }}"
      requred-number="{{ requredNnumber }}"
      optional="false"
    >
      <div class="select-input">
        <p class="select-icon">+</p>
      </div>
      <p class="design-name">Design {{ forloop.index }}</p>
    </a>
  {% endfor %}
</section>

<br>
<h2>Optional</h2>
<small>Spare 25% auf jedes weitere Design</small>

<section class="select-wrapper">
  {% for i in (1..1) %}
    <a
      style="text-decoration: none;"
      href="javascript:void(0)"
      data-drawer-trigger
      aria-controls="drawer-name"
      aria-expanded="false"
      form-id="{{ product_form_id }}"
      index-number="{{ forloop.index | plus: requredNnumber }}"
      requred-number="{{ requredNnumber }}"
      optional="true"
    >
      <div class="select-input">
        <p class="select-icon">+</p>
      </div>
      <p class="design-name">Design {{ forloop.index | plus: requredNnumber }}</p>
    </a>
  {% endfor %}
</section>
